<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chatty" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ChattyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/matt_black</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="background">@color/dark_grey</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/Theme.MaterialComponents.Light</item>


    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">

        <item name="colorPrimary">@color/white_2</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColor">@color/post_txt_color</item>
        <item name="android:titleTextColor">@color/white_2</item>
        <item name="android:gravity">center|start</item>
        <item name="android:popupTheme">@style/Theme.MaterialComponents.Light</item>
        <item name="android:popupBackground">@color/white_2</item>
        <item name="android:actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

    </style>

    <style name="ChattyTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ChattyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ChattyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>